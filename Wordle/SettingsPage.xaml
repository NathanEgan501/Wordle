<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.SettingsPage"
             Title="Settings">

    <StackLayout Padding="20">
        <Label Text="Settings" FontSize="32" HorizontalOptions="Center" />

        <Label Text="Select Theme:" FontSize="18" />
        <Picker x:Name="ThemePicker" SelectedIndexChanged="OnThemeChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Light Mode</x:String>
                    <x:String>Dark Mode</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Adjust Font Size:" FontSize="18" />
        <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="30" ValueChanged="OnFontSizeChanged" />
        <Label x:Name="FontSizeLabel" Text="Font Size: 14" FontSize="14" />
    </StackLayout>
</ContentPage>